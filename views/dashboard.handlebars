<header>
  <h1>Your Dashboard</h1>
  <a href="/logout" id="logout">Logout</a>
</header>
<main>
  <section>
    <h2>Your Posts</h2>
    {{#each posts}}
    <article>
      <h3>{{this.title}}</h3>
      <p>{{this.content}}</p>
      <p>Posted on {{this.createdAt}}</p>
      <a href="/edit/{{this.id}}">Edit</a>
      <a href="/delete/{{this.id}}">Delete</a>
    </article>
    {{/each}}
  </section>
  <section>
    <h2>Create New Post</h2>
    <form id="new-post-form">
      <input type="text" id="post-title" name="title" placeholder="Post Title">
      <textarea id="post-content" name="content" rows="4" cols="50" placeholder="Post Content"></textarea>
      <button type="submit">Submit</button>
    </form>
  </section>
</main>
